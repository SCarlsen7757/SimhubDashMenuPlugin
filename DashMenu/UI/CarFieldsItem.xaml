<UserControl x:Class="DashMenu.UI.CarFieldSettingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DashMenu.UI"
             xmlns:settings="clr-namespace:DashMenu.Settings.DisplayedFields"
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             DataContextChanged="UserControl_DataContextChanged">

    <UserControl.DataContext>
        <settings:CarFields />
    </UserControl.DataContext>

    <Border BorderThickness="0"
            CornerRadius="6"
            BorderBrush="#33000000"
            Background="{DynamicResource GrayBrush10}"
            Margin="4">
        <AutoGrid Columns="*,auto"
                  Margin="10">
            <StackPanel>
                <Label Content="{Binding Path=CarModel}"
                       Grid.ColumnSpan="2"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,0"
                       Padding="0" />
                <Label Content="{Binding Path=CarId}"
                       Grid.ColumnSpan="2"
                       Margin="0,4,0,0"
                       ContentStringFormat="ID : {0}"
                       Padding="0" />
            </StackPanel>
        </AutoGrid>
    </Border>
</UserControl>
