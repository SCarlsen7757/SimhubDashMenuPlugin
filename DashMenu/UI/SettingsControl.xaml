<UserControl x:Class="DashMenu.UI.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DashMenu.UI"
             xmlns:settings="clr-namespace:DashMenu.Settings"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.DataContext>
        <settings:GameSettings />
    </UserControl.DataContext>

    <UserControl.Resources>
        <local:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
    </UserControl.Resources>

    <styles:SHTabControl>
        <styles:SHTabItem Name="DataFields"
                          Header="Data fields">
            <styles:SHSection Title="General settings">
                <AutoGrid Rows="auto,*">
                    <!--Default amount of fields-->
                    <ui:TitledSlider Title="Default amount data of fields"
                                     Maximum="20"
                                     Minimum="0"
                                     HorizontalAlignment="Stretch"
                                     Margin="10,0"
                                     Value="{Binding Path=DefaultAmountOfDataFields, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <styles:SHTabControl>
                        <styles:SHTabItem Header="Settings">
                            <!--Field data settings-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="300"
                                                      Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <AutoGrid Columns="auto, *"
                                          Margin="0,0,0,4"
                                          Grid.Column="0"
                                          Grid.Row="1">
                                    <TextBox x:Name="DataFieldFilter"
                                             Grid.ColumnSpan="2"
                                             Margin="0,4,6,4"
                                             Grid.Column="0"
                                             Controls:TextBoxHelper.ClearTextButton="true"
                                             TextWrapping="Wrap"
                                             Controls:TextBoxHelper.Watermark="Field filter ..."
                                             TextChanged="DataFieldFilter_TextChanged" />
                                    <styles:SHToggleCheckbox x:Name="DataFieldHide"
                                                             Checked="DataFieldHide_CheckedChanged"
                                                             Unchecked="DataFieldHide_CheckedChanged"
                                                             Margin="4,0,0,0" />
                                    <Label Content="Show hidden fields" />
                                </AutoGrid>
                                <ScrollViewer Grid.Column="0"
                                              Grid.Row="2"
                                              VerticalScrollBarVisibility="Auto"
                                              Margin="0,0,4,0">
                                    <StackPanel>
                                        <styles:SHListBox Name="FieldDataSettings">
                                            <ItemsControl.GroupStyle>
                                                <GroupStyle>
                                                    <GroupStyle.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource WhiteBrush}"
                                                                    BorderBrush="{DynamicResource BlackBrush}"
                                                                    BorderThickness="0"
                                                                    CornerRadius="6"
                                                                    Margin="0"
                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalAlignment="Stretch">
                                                                <Label Content="{Binding Path=Name}"
                                                                       Height="30"
                                                                       FontWeight="Bold"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource BlackBrush}"
                                                                       Margin="0,0,0,0"
                                                                       Padding="5" />
                                                            </Border>
                                                        </DataTemplate>
                                                    </GroupStyle.HeaderTemplate>
                                                </GroupStyle>
                                            </ItemsControl.GroupStyle>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <AutoGrid Margin="0,0"
                                                              Columns="1,*,1">
                                                        <Border Background="{DynamicResource AccentColorBrush}"
                                                                Margin="-4,-4,1,-4"
                                                                Visibility="{Binding Path=Enabled, Converter={SHBoolToVisibilityConverter Hide=true}}" />
                                                        <Label Padding="4,1,1,1"
                                                               Content="{Binding Path=Name}" />
                                                        <Border Background="{DynamicResource GrayBrush5}"
                                                                Margin="-4,-4,1,-4"
                                                                Visibility="{Binding Path=Hide, Converter={SHBoolToVisibilityConverter Hide=False}}" />
                                                    </AutoGrid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </styles:SHListBox>
                                    </StackPanel>
                                </ScrollViewer>
                                <Border CornerRadius="6"
                                        BorderBrush="#33000000"
                                        Background="{DynamicResource GrayBrush10}"
                                        Margin="4"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Visibility="{Binding ElementName=FieldDataSettings, Path=SelectedValue, Converter={IsNotNullToCollapsedConverter}}">
                                    <StackPanel VerticalAlignment="Center">
                                        <Label VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Content="Select a field data to edit it" />
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1"
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        BorderThickness="0"
                                        CornerRadius="6"
                                        BorderBrush="#33000000"
                                        Background="{DynamicResource GrayBrush10}"
                                        Visibility="{Binding ElementName=FieldDataSettings, Path=SelectedValue, Converter={IsNullToCollapsedConverter}}"
                                        Margin="4">
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollBarVisibility="Auto">
                                        <local:DataFieldSettingsItem DataContext="{Binding ElementName=FieldDataSettings, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=SelectedValue}" />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </styles:SHTabItem>
                        <styles:SHTabItem Header="Order">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <styles:SHListBox x:Name="DataFieldOrderListBox"
                                                  ItemsSource="{Binding DataFields.Order}"
                                                  PreviewMouseLeftButtonDown="DataFieldOrderListBox_PreviewMouseLeftButtonDown"
                                                  PreviewMouseMove="DataFieldOrderListBox_PreviewMouseMove"
                                                  AllowDrop="True"
                                                  Drop="FieldOrderListBox_Drop"
                                                  DragOver="FieldOrderListBox_DragOver" />
                            </ScrollViewer>
                        </styles:SHTabItem>
                    </styles:SHTabControl>
                </AutoGrid>
            </styles:SHSection>
        </styles:SHTabItem>
        <styles:SHTabItem Name="Alerts"
                          Header="Alerts">
            <styles:SHSection Title="Alerts settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="300"
                                          Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <styles:SHSubSectionTitle Content="Alerts"
                                              Grid.Column="0"
                                              Grid.Row="0"
                                              Grid.ColumnSpan="2" />
                    <AutoGrid Columns="auto,*"
                              Margin="0,0,0,4"
                              Grid.Column="0"
                              Grid.Row="1">
                        <TextBox x:Name="AlertFilter"
                                 Grid.ColumnSpan="2"
                                 Margin="0,4,6,4"
                                 Grid.Column="0"
                                 Controls:TextBoxHelper.ClearTextButton="true"
                                 TextWrapping="Wrap"
                                 Controls:TextBoxHelper.Watermark="Field filter ..."
                                 TextChanged="AlertFilter_TextChanged" />
                        <styles:SHToggleCheckbox x:Name="AlertHide"
                                                 Checked="AlertHide_CheckedChanged"
                                                 Unchecked="AlertHide_CheckedChanged" />
                        <Label Content="Show hidden fields" />
                    </AutoGrid>
                    <ScrollViewer Grid.Column="0"
                                  Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,0,4,0">
                        <styles:SHListBox Name="AlertSettings">
                            <ItemsControl.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource WhiteBrush}"
                                                    BorderBrush="{DynamicResource BlackBrush}"
                                                    BorderThickness="0"
                                                    CornerRadius="6"
                                                    Margin="0"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch">
                                                <Label Content="{Binding Path=Name}"
                                                       Height="30"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource BlackBrush}"
                                                       Margin="0,0,0,0"
                                                       Padding="5" />
                                            </Border>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ItemsControl.GroupStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <AutoGrid Margin="0,0"
                                              Columns="1,*,1">
                                        <Border Background="{DynamicResource AccentColorBrush}"
                                                Margin="-4,-4,1,-4"
                                                Visibility="{Binding Path=Enabled, Converter={SHBoolToVisibilityConverter Hide=true}}" />
                                        <Label Padding="4,1,1,1"
                                               Content="{Binding Path=Name}" />
                                        <Border Background="{DynamicResource GrayBrush5}"
                                                Margin="-4,-4,1,-4"
                                                Visibility="{Binding Path=Hide, Converter={SHBoolToVisibilityConverter Hide=False}}" />
                                    </AutoGrid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </styles:SHListBox>
                    </ScrollViewer>
                    <Border CornerRadius="6"
                            BorderBrush="#33000000"
                            Background="{DynamicResource GrayBrush10}"
                            Margin="4"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                            Grid.Row="1"
                            Visibility="{Binding ElementName=AlertSettings, Path=SelectedValue, Converter={IsNotNullToCollapsedConverter}}">
                        <StackPanel VerticalAlignment="Center">
                            <Label VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Content="Select a field data to edit it" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            BorderThickness="0"
                            CornerRadius="6"
                            BorderBrush="#33000000"
                            Background="{DynamicResource GrayBrush10}"
                            Visibility="{Binding ElementName=AlertSettings, Path=SelectedValue, Converter={IsNullToCollapsedConverter}}"
                            Margin="4">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <local:AlertSettingsItem DataContext="{Binding ElementName=AlertSettings, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=SelectedValue}" />
                        </ScrollViewer>
                    </Border>
                </Grid>
            </styles:SHSection>
        </styles:SHTabItem>
        <styles:SHTabItem Name="GaugeFields"
                          Header="Gauge fields">
            <styles:SHSection Title="General settings">
                <AutoGrid Rows="auto,*">
                    <!--Default amount of fields-->
                    <ui:TitledSlider Title="Default amount gauge of fields"
                                     Maximum="20"
                                     Minimum="0"
                                     HorizontalAlignment="Stretch"
                                     Margin="10,0"
                                     Value="{Binding Path=DefaultAmountOfGaugeFields, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <styles:SHTabControl>
                        <styles:SHTabItem Header="Settings">
                            <!--Field gauge settings-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="300"
                                                      Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <styles:SHSubSectionTitle Content="Field data"
                                                          Grid.Column="0"
                                                          Grid.Row="0"
                                                          Grid.ColumnSpan="2" />
                                <AutoGrid Columns="auto,*"
                                          Margin="0,0,0,4"
                                          Grid.Column="0"
                                          Grid.Row="1">
                                    <TextBox x:Name="GaugeFieldFilter"
                                             Grid.ColumnSpan="2"
                                             Margin="0,4,6,4"
                                             Grid.Column="0"
                                             Controls:TextBoxHelper.ClearTextButton="true"
                                             TextWrapping="Wrap"
                                             Controls:TextBoxHelper.Watermark="Field filter ..."
                                             TextChanged="GaugeFieldFilter_TextChanged" />
                                    <styles:SHToggleCheckbox x:Name="GaugeFieldHide"
                                                             Checked="GaugeFieldHide_CheckedChanged"
                                                             Unchecked="GaugeFieldHide_CheckedChanged" />
                                    <Label Content="Show hidden fields" />
                                </AutoGrid>
                                <ScrollViewer Grid.Column="0"
                                              Grid.Row="2"
                                              VerticalScrollBarVisibility="Auto"
                                              Margin="0,0,4,0">
                                    <styles:SHListBox Name="FieldGaugeSettings">
                                        <ItemsControl.GroupStyle>
                                            <GroupStyle>
                                                <GroupStyle.HeaderTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{DynamicResource WhiteBrush}"
                                                                BorderBrush="{DynamicResource BlackBrush}"
                                                                BorderThickness="0"
                                                                CornerRadius="6"
                                                                Margin="0"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Stretch">
                                                            <Label Content="{Binding Path=Name}"
                                                                   Height="30"
                                                                   FontWeight="Bold"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource BlackBrush}"
                                                                   Margin="0,0,0,0"
                                                                   Padding="5" />
                                                        </Border>
                                                    </DataTemplate>
                                                </GroupStyle.HeaderTemplate>
                                            </GroupStyle>
                                        </ItemsControl.GroupStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <AutoGrid Margin="0,0"
                                                          Columns="1,*,1">
                                                    <Border Background="{DynamicResource AccentColorBrush}"
                                                            Margin="-4,-4,1,-4"
                                                            Visibility="{Binding Path=Enabled, Converter={SHBoolToVisibilityConverter Hide=true}}" />
                                                    <Label Padding="4,1,1,1"
                                                           Content="{Binding Path=Name}" />
                                                    <Border Background="{DynamicResource GrayBrush5}"
                                                            Margin="-4,-4,1,-4"
                                                            Visibility="{Binding Path=Hide, Converter={SHBoolToVisibilityConverter Hide=False}}" />
                                                </AutoGrid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </styles:SHListBox>
                                </ScrollViewer>
                                <Border CornerRadius="6"
                                        BorderBrush="#33000000"
                                        Background="{DynamicResource GrayBrush10}"
                                        Margin="4"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Visibility="{Binding ElementName=FieldGaugeSettings, Path=SelectedValue, Converter={IsNotNullToCollapsedConverter}}">
                                    <StackPanel VerticalAlignment="Center">
                                        <Label VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Content="Select a field data to edit it" />
                                    </StackPanel>
                                </Border>
                                <Border CornerRadius="6"
                                        BorderBrush="#33000000"
                                        Background="{DynamicResource GrayBrush10}"
                                        Margin="4"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Visibility="{Binding ElementName=FieldGaugeSettings, Path=SelectedValue, Converter={IsNullToCollapsedConverter}}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollBarVisibility="Auto">
                                        <StackPanel Orientation="Vertical">
                                            <local:DataFieldSettingsItem DataContext="{Binding ElementName=FieldGaugeSettings, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=SelectedValue}" />
                                            <local:GaugeFieldSettingsItem DataContext="{Binding ElementName=FieldGaugeSettings, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=SelectedValue}" />
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </styles:SHTabItem>
                        <styles:SHTabItem Header="Order">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <styles:SHListBox x:Name="GaugeFieldOrderListBox"
                                                  ItemsSource="{Binding GaugeFields.Order}"
                                                  PreviewMouseLeftButtonDown="GaugeFieldOrderListBox_PreviewMouseLeftButtonDown"
                                                  PreviewMouseMove="GaugeFieldOrderListBox_PreviewMouseMove"
                                                  AllowDrop="True"
                                                  Drop="FieldOrderListBox_Drop"
                                                  DragOver="FieldOrderListBox_DragOver" />
                            </ScrollViewer>
                        </styles:SHTabItem>
                    </styles:SHTabControl>
                </AutoGrid>
            </styles:SHSection>
        </styles:SHTabItem>
        <styles:SHTabItem Name="CarSettings"
                          Header="Car settings">
            <!--Car settings-->
            <styles:SHSection Title="Car settings">
                <AutoGrid Columns="auto, *">
                    <!--Default data fields-->
                    <StackPanel Grid.ColumnSpan="2">
                        <styles:SHSubSectionTitle Content="Default data fields" />
                        <styles:SHLinkButton Name="ButtonForgetDefaultDataFields"
                                             Click="ButtonForgetDefaultDataFields_Click"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Content="Forget default fields"
                                             Margin="0,0,4,0" />
                        <styles:SHLinkButton Name="ButtonMakeDefaultDataFields"
                                             Click="ButtonMakeDefaultDataFields_Click"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Content="Make default fields"
                                             Margin="0,0,4,0" />
                        <ItemsControl Name="ItemsControlDefaultDataField"
                                      Grid.ColumnSpan="2"
                                      Margin="12,0,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0"
                                            CornerRadius="6"
                                            Background="{DynamicResource GrayBrush8}"
                                            Margin="4">
                                        <FrameworkElement.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Change field"
                                                          Click="DefaultDataFieldItem_Click" />
                                            </ContextMenu>
                                        </FrameworkElement.ContextMenu>
                                        <StackPanel Orientation="Vertical">
                                            <Label Content="{Binding Namespace}"
                                                   Margin="5,0,5,0"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource GrayBrush5}" />
                                            <Label Content="{Binding Name}"
                                                   Margin="5,-5,5,2"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <!--Default gauge fields-->
                    <StackPanel Grid.ColumnSpan="2">

                        <styles:SHSubSectionTitle Content="Default gauge fields" />
                        <styles:SHLinkButton Name="ButtonForgetDefaultGaugeFields"
                                             Click="ButtonForgetDefaultGaugeFields_Click"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Content="Forget default fields"
                                             Margin="0,0,4,0" />
                        <styles:SHLinkButton Name="ButtonMakeDefaultGaugeFields"
                                             Click="ButtonMakeDefaultGaugeFields_Click"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Content="Make default fields"
                                             Margin="0,0,4,0" />
                        <ItemsControl Name="ItemsControlDefaultGaugeField"
                                      Grid.ColumnSpan="2"
                                      Margin="12,0,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0"
                                            CornerRadius="6"
                                            Background="{DynamicResource GrayBrush8}"
                                            Margin="4">
                                        <FrameworkElement.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Change field"
                                                          Click="DefaultGaugeFieldItem_Click" />
                                            </ContextMenu>
                                        </FrameworkElement.ContextMenu>
                                        <StackPanel Orientation="Vertical">
                                            <Label Content="{Binding Namespace}"
                                                   Margin="5,0,5,0"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource GrayBrush5}" />
                                            <Label Content="{Binding Name}"
                                                   Margin="5,-5,5,2"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <!--Car fields-->
                    <Grid Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0"
                                    Grid.Row="0"
                                    Grid.ColumnSpan="2">
                            <styles:SHSubSectionTitle Content="Per car settings" />
                            <styles:SHLinkButton Click="ButtonForgetAllCars_Click"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Right"
                                                 Content="Forget all cars"
                                                 Margin="0,0,4,8" />
                        </StackPanel>
                        <ScrollViewer Grid.Column="0"
                                      Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="0,0,4,0">
                            <styles:SHListBox Name="FirstCarDataFieldSetting"
                                              ItemsSource="{Binding Path=CarFields}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <AutoGrid Margin="0,0"
                                                  Columns="1,*">
                                            <Border Background="Green"
                                                    Margin="-4,-4,1,-4"
                                                    Visibility="{Binding Path=Value.IsActive, 
                                                Converter={SHBoolToVisibilityConverter Hide=true}}" />
                                            <StackPanel Margin="12,4">
                                                <Label Padding="0"
                                                       Content="{Binding Path=Value.CarModel}" />
                                                <Label Padding="0"
                                                       FontSize="10"
                                                       Content="{Binding Path=Value.CarId}"
                                                       Foreground="{DynamicResource GrayBrush5}" />
                                            </StackPanel>
                                        </AutoGrid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </styles:SHListBox>
                        </ScrollViewer>
                        <Border CornerRadius="6"
                                BorderBrush="#33000000"
                                Background="{DynamicResource GrayBrush10}"
                                Margin="4"
                                Grid.Column="1"
                                Grid.Row="1"
                                Visibility="{Binding ElementName=FirstCarDataFieldSetting, Path=SelectedValue, Converter={IsNotNullToCollapsedConverter}}">
                            <StackPanel VerticalAlignment="Center">
                                <Label VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Content="Select a field data to edit it" />
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="6"
                                BorderBrush="#33000000"
                                Background="{DynamicResource GrayBrush10}"
                                Margin="4"
                                Grid.Column="1"
                                Grid.Row="1"
                                Visibility="{Binding ElementName=FirstCarDataFieldSetting, Path=SelectedValue, Converter={IsNullToCollapsedConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <local:CarFieldSettingItem x:Name="CarFieldSettingItem" 
                                                           Visibility="{Binding ElementName=FirstCarDataFieldSetting, Path=SelectedValue, Converter={IsNullToCollapsedConverter}}"
                                                           DataContext="{Binding ElementName=FirstCarDataFieldSetting, Path=SelectedValue.Value}" />
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </AutoGrid>
            </styles:SHSection>
        </styles:SHTabItem>
        <styles:SHTabItem Name="Controls"
                          Header="Controls">
            <styles:SHSection Title="Control mapping">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ui:ControlsEditor ActionName="DashMenuPlugin.ToggleConfigMode"
                                           FriendlyName="Toggle configuration mode" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.ChangeFieldType"
                                           FriendlyName="Change field type" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.ConfigNextField"
                                           FriendlyName="Select next field" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.ConfigPrevField"
                                           FriendlyName="Select previous field" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.ChangeFieldTypeNext"
                                           FriendlyName="Change field (next)" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.ChangeFieldTypePrev"
                                           FriendlyName="Change field (prev)" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.IncreaseNumberOfFields"
                                           FriendlyName="Increase number of fields" />
                        <ui:ControlsEditor ActionName="DashMenuPlugin.DecreasenumberOfFields"
                                           FriendlyName="Decrease number of fields" />
                    </StackPanel>
                </ScrollViewer>
            </styles:SHSection>
        </styles:SHTabItem>
    </styles:SHTabControl>
</UserControl>
